---
import { loadContent } from '../utils/content';

interface Props {
  scheduleUrl?: string;
}

const { scheduleUrl } = Astro.props;
const hasScheduleUrl = typeof scheduleUrl === 'string' && scheduleUrl.length > 0;

const { frontmatter, html } = loadContent('contact.md');
const title = (frontmatter.title as string) ?? 'Свяжитесь со мной';
---

<section id="booking" class="py-12 sm:py-24 px-4 bg-warm-white">
  <div class="max-w-5xl mx-auto">
    <div class="reveal flex items-center gap-4 mb-5">
      <div class="w-1 h-10 bg-sage rounded-full shrink-0"></div>
      <h2 class="font-heading text-4xl sm:text-5xl font-semibold text-warm-gray">
        {title}
      </h2>
    </div>

    <div class="reveal reveal-delay-1 text-warm-gray-light leading-relaxed max-w-2xl mb-8 sm:mb-10">
      <div class="space-y-4" set:html={html} />
    </div>

    <div class="grid gap-6 lg:grid-cols-2">
      <div class="reveal bg-warm-white rounded-2xl p-6 sm:p-8 border border-sage/15">
        <h3 class="font-heading text-lg font-semibold text-warm-gray mb-2">Забронировать время</h3>
        <p class="text-warm-gray-light text-sm sm:text-base mb-5">
          Быстрее всего — выбрать слот в календаре.
        </p>
        {hasScheduleUrl ? (
          <a
            href={scheduleUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 bg-sage hover:bg-sage-dark text-white px-7 py-3 rounded-full text-sm font-medium tracking-wide transition-all duration-300 hover:shadow-lg hover:shadow-sage/25 hover:-translate-y-0.5"
          >
            Забронировать время
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
          </a>
        ) : (
          <p class="text-warm-gray-light text-sm">
            Ссылка на календарь записи будет добавлена позже.
          </p>
        )}
      </div>

      <div class="reveal bg-warm-white rounded-2xl p-6 sm:p-8 border border-sage/15">
        <h3 class="font-heading text-lg font-semibold text-warm-gray mb-2">Написать мне</h3>
        <p class="text-warm-gray-light text-sm sm:text-base mb-5">
          Если удобнее — напишите в мессенджер.
        </p>
        <div class="flex flex-col sm:flex-row gap-3">
          <a
            href="https://t.me/captain_nastia"
            target="_blank"
            rel="noopener noreferrer"
            class="group inline-flex items-center justify-center gap-3 bg-warm-white hover:bg-sage/10 border border-sage/15 hover:border-sage/30 text-warm-gray px-6 py-3 rounded-full font-medium text-sm transition-all duration-200 hover:-translate-y-0.5"
          >
            <svg class="w-5 h-5 text-sage-dark transition-colors duration-200 group-hover:text-sage" viewBox="0 0 24 24" fill="currentColor">
              <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
            </svg>
            Telegram
          </a>
          <a
            href="https://instagram.com/captain_nastia_psy"
            target="_blank"
            rel="noopener noreferrer"
            class="group inline-flex items-center justify-center gap-3 bg-warm-white hover:bg-sage/10 border border-sage/15 hover:border-sage/30 text-warm-gray px-6 py-3 rounded-full font-medium text-sm transition-all duration-200 hover:-translate-y-0.5"
          >
            <svg class="w-5 h-5 text-sage-dark transition-colors duration-200 group-hover:text-sage" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 1 0 0 12.324 6.162 6.162 0 0 0 0-12.324zM12 16a4 4 0 1 1 0-8 4 4 0 0 1 0 8zm6.406-11.845a1.44 1.44 0 1 0 0 2.881 1.44 1.44 0 0 0 0-2.881z"/>
            </svg>
            Instagram
          </a>
        </div>
      </div>
    </div>

  </div>
</section>
